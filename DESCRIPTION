Package: tauBayesW
Title: Bayesian Weighted Quantile Regression with EM and MCMC Algorithm
Version: 0.1.0
Authors@R: 
    c(
        person("Marcus L.", "Nascimiento", email = "marcus.lavagnole@fgv.br", role = "aut"),
        person("Kelly Cristina", "Mota Gonçalves", email = "kelly@dme.ufrj.br", role = "aut"),
